<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplesocialapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleSocialApp">

        <!-- Old LoginActivity, no longer launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Old SignupActivity -->
        <activity android:name=".SignupActivity"
            android:exported="false"/>

        <!-- New Launcher Activity -->
        <activity
            android:name=".PhoneNumberEntryActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".OtpVerificationActivity" />
        <activity android:name=".DetailedProfileSetupActivity" />
        <activity android:name=".MainFeedActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".CreatePostActivity" />

    </application>

</manifest>
